{
  "name": "jules-chat-extension",
  "displayName": "Jules Chat (Unofficial)",
  "description": "An open-source chat interface for the Google Jules Async Agent.",
  "version": "0.0.1",
  "publisher": "Uchenna Innocent",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/innosaint-uche/jules-chat-extension.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jules-sidebar",
          "title": "Jules",
          "icon": "$(hubot)"
        }
      ]
    },
    "views": {
      "jules-sidebar": [
        {
          "type": "webview",
          "id": "jules.chatView",
          "name": "Jules Agent",
          "icon": "resources/jules.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "jules.openChat",
        "title": "Jules: Open Chat"
      },
      {
        "command": "jules.checkStatus",
        "title": "Jules: Check Status",
        "category": "Jules"
      },
      {
        "command": "jules.gitOps",
        "title": "Jules: Git Operations",
        "category": "Jules"
      },
      {
        "command": "jules.generateCode",
        "title": "Jules: Generate Code",
        "category": "Jules"
      },
      {
        "command": "jules.setApiKey",
        "title": "Jules: Set API Key",
        "category": "Jules"
      },
      {
        "command": "jules.clearApiKey",
        "title": "Jules: Clear API Key",
        "category": "Jules"
      }
    ],
    "configuration": {
      "title": "Jules Chat",
      "properties": {
        "jules.mode": {
          "type": "string",
          "enum": [
            "cli",
            "api"
          ],
          "default": "cli",
          "description": "Choose between using the local CLI (requires 'jules login') or the direct REST API (requires API Key)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0"
  }
}
